# Example .env file for adverserial-ai-backend
# Copy this file to .env and fill in your secrets

DATABASE_URL=sqlite:///./adversarial_ai.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adversarial_ai
DB_USER=postgres
DB_PASSWORD=password

SECRET_KEY=dev-secret-key-change-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

OPENAI_API_KEY=your_openai_api_key_here

ENVIRONMENT=development
DEBUG=true
CHROMA_DIR=./chroma
CHROMA_COLLECTION=rag_collection
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
OPENAI_MODEL=gpt-4o-mini
TOP_K=4
MAX_TOKENS_CONTEXT=2000
